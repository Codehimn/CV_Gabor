---
import ChatWidget from "../components/ChatWidget";
import Navbar from "../components/Navbar.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Ask AI | Gabor Flandorffer" showChatWidget={false}>
    <Navbar />
    <main class="ai-page">
        <!-- Animated background elements -->
        <div class="ai-bg">
            <div class="ai-orb ai-orb-1"></div>
            <div class="ai-orb ai-orb-2"></div>
            <div class="ai-orb ai-orb-3"></div>
            <div class="ai-grid"></div>
        </div>

        <!-- Header section -->
        <div class="ai-header">
            <div class="ai-badge">
                <span class="ai-badge-icon">ü§ñ</span>
                <span>AI-Powered Assistant</span>
            </div>
            <h1 class="ai-title">
                <span class="ai-title-line" data-i18n="ai.title_line1">Ask</span
                >
                <span
                    class="ai-title-highlight gradient-text"
                    data-i18n="ai.title_line2">GaborGPT</span
                >
            </h1>
            <p class="ai-subtitle" data-i18n="ai.subtitle">
                Get instant answers about my experience, tech stack, services,
                and more.
            </p>

            <!-- Suggested prompts -->
            <div class="ai-suggestions">
                <button class="ai-chip" data-prompt="experiencia">
                    <span class="ai-chip-icon">üíº</span>
                    <span data-i18n="ai.chip_experience">Experience</span>
                </button>
                <button class="ai-chip" data-prompt="stack">
                    <span class="ai-chip-icon">‚ö°</span>
                    <span data-i18n="ai.chip_stack">Tech Stack</span>
                </button>
                <button class="ai-chip" data-prompt="servicios">
                    <span class="ai-chip-icon">üõ†Ô∏è</span>
                    <span data-i18n="ai.chip_services">Services</span>
                </button>
                <button class="ai-chip" data-prompt="contacto">
                    <span class="ai-chip-icon">üì¨</span>
                    <span data-i18n="ai.chip_contact">Contact</span>
                </button>
            </div>
        </div>

        <!-- Full Page Chat -->
        <div class="ai-chat-container">
            <ChatWidget client:load mode="page" />
        </div>
    </main>
</Layout>

<script>
    // Chip click ‚Üí populate chat input
    document.querySelectorAll(".ai-chip").forEach((chip) => {
        chip.addEventListener("click", () => {
            const prompt = (chip as HTMLElement).dataset.prompt;
            // Dispatch a custom event that ChatWidget can listen to
            window.dispatchEvent(
                new CustomEvent("ai-prompt", { detail: { prompt } }),
            );

            // Also try to directly set the input as a fallback
            const chatInput = document.querySelector(
                '.ai-chat-container input[type="text"]',
            ) as HTMLInputElement;
            if (chatInput && prompt) {
                chatInput.value = prompt;
                chatInput.dispatchEvent(new Event("input", { bubbles: true }));
                chatInput.focus();
            }
        });
    });
</script>

<style>
    .ai-page {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        position: relative;
        overflow: hidden;
        background: var(--bg-primary);
        padding-top: 5rem;
    }

    /* ---------- Animated Background ---------- */
    .ai-bg {
        position: fixed;
        inset: 0;
        pointer-events: none;
        z-index: 0;
    }

    .ai-grid {
        position: absolute;
        inset: 0;
        background-image:
            linear-gradient(rgba(129, 140, 248, 0.03) 1px, transparent 1px),
            linear-gradient(
                90deg,
                rgba(129, 140, 248, 0.03) 1px,
                transparent 1px
            );
        background-size: 50px 50px;
        mask-image: radial-gradient(
            ellipse 70% 50% at 50% 30%,
            black,
            transparent
        );
        -webkit-mask-image: radial-gradient(
            ellipse 70% 50% at 50% 30%,
            black,
            transparent
        );
    }

    .ai-orb {
        position: absolute;
        border-radius: 50%;
        filter: blur(120px);
        opacity: 0.4;
        animation: ai-float 20s ease-in-out infinite;
    }

    .ai-orb-1 {
        width: 500px;
        height: 500px;
        background: linear-gradient(135deg, #3b82f6, #8b5cf6);
        top: -15%;
        right: -10%;
        animation-delay: 0s;
    }

    .ai-orb-2 {
        width: 350px;
        height: 350px;
        background: linear-gradient(135deg, #06b6d4, #3b82f6);
        bottom: 10%;
        left: -5%;
        animation-delay: -7s;
    }

    .ai-orb-3 {
        width: 250px;
        height: 250px;
        background: linear-gradient(135deg, #8b5cf6, #ec4899);
        top: 50%;
        right: 30%;
        animation-delay: -14s;
    }

    @keyframes ai-float {
        0%,
        100% {
            transform: translate(0, 0) scale(1);
        }
        33% {
            transform: translate(40px, -60px) scale(1.1);
        }
        66% {
            transform: translate(-30px, 30px) scale(0.9);
        }
    }

    /* ---------- Header ---------- */
    .ai-header {
        text-align: center;
        padding: 2rem 1.5rem 1rem;
        z-index: 2;
        position: relative;
        max-width: 700px;
    }

    .ai-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.6rem;
        padding: 0.5rem 1.2rem;
        border-radius: 100px;
        background: rgba(139, 92, 246, 0.08);
        border: 1px solid rgba(139, 92, 246, 0.2);
        color: #a78bfa;
        font-size: 0.8rem;
        font-weight: 600;
        letter-spacing: 0.04em;
        margin-bottom: 1.5rem;
        animation: fadeInDown 0.6s ease-out;
    }

    .ai-badge-icon {
        font-size: 1rem;
    }

    .ai-title {
        font-size: clamp(2rem, 6vw, 3.5rem);
        font-weight: 900;
        line-height: 1.1;
        margin-bottom: 1rem;
        animation: fadeInDown 0.6s ease-out 0.1s both;
    }

    .ai-title-line {
        display: block;
        color: var(--text-secondary);
        font-size: clamp(1.2rem, 3vw, 1.6rem);
        font-weight: 500;
        margin-bottom: 0.3rem;
        letter-spacing: 0.02em;
    }

    .ai-title-highlight {
        font-size: clamp(2.5rem, 7vw, 4rem);
        filter: drop-shadow(0 0 20px rgba(139, 92, 246, 0.3));
    }

    .ai-subtitle {
        font-size: clamp(0.95rem, 2vw, 1.15rem);
        color: var(--text-secondary);
        max-width: 500px;
        margin: 0 auto 1.5rem;
        line-height: 1.7;
        animation: fadeInDown 0.6s ease-out 0.2s both;
    }

    /* ---------- Suggestion Chips ---------- */
    .ai-suggestions {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 0.6rem;
        animation: fadeInDown 0.6s ease-out 0.3s both;
    }

    .ai-chip {
        display: inline-flex;
        align-items: center;
        gap: 0.4rem;
        padding: 0.45rem 1rem;
        border-radius: 100px;
        background: rgba(255, 255, 255, 0.04);
        border: 1px solid rgba(255, 255, 255, 0.08);
        color: var(--text-secondary);
        font-family: var(--font-sans);
        font-size: 0.8rem;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
    }

    .ai-chip:hover {
        background: rgba(139, 92, 246, 0.12);
        border-color: rgba(139, 92, 246, 0.3);
        color: var(--text-primary);
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(139, 92, 246, 0.15);
    }

    .ai-chip-icon {
        font-size: 0.9rem;
    }

    /* ---------- Chat Container ---------- */
    .ai-chat-container {
        flex: 1;
        width: 100%;
        max-width: 900px;
        padding: 0 1.5rem 2rem;
        z-index: 2;
        position: relative;
    }

    /* ---------- Animations ---------- */
    @keyframes fadeInDown {
        from {
            opacity: 0;
            transform: translateY(-15px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* ---------- Responsive ---------- */
    @media (max-width: 768px) {
        .ai-page {
            padding-top: 4rem;
        }

        .ai-header {
            padding: 1.5rem 1rem 0.5rem;
        }

        .ai-suggestions {
            gap: 0.5rem;
        }

        .ai-chip {
            padding: 0.4rem 0.8rem;
            font-size: 0.75rem;
        }

        .ai-orb-1 {
            width: 300px;
            height: 300px;
        }

        .ai-orb-2 {
            width: 200px;
            height: 200px;
        }

        .ai-orb-3 {
            display: none;
        }
    }
</style>
