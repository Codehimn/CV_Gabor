<style>
    .navbar {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        z-index: 100;
        padding: 1.2rem 0;
        transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    }

    .navbar.scrolled {
        background: rgba(10, 14, 26, 0.85);
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
        border-bottom: 1px solid rgba(56, 189, 248, 0.08);
        padding: 0.8rem 0;
    }

    .nav-container {
        width: min(1200px, 90vw);
        margin: 0 auto;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .nav-logo {
        font-family: var(--font-mono);
        font-size: 1.4rem;
        font-weight: 700;
        text-decoration: none;
        color: var(--text-primary);
        transition: all 0.3s;
        z-index: 120; /* Keep logo above mobile menu */
    }

    .logo-bracket {
        color: var(--accent-blue);
    }

    .logo-name {
        background: var(--gradient-primary);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .nav-logo:hover {
        transform: scale(1.05);
    }

    .nav-links {
        display: flex;
        align-items: center;
        list-style: none;
        gap: 0.5rem;
    }

    .nav-link {
        padding: 0.5rem 0.9rem;
        color: var(--text-secondary);
        font-size: 0.9rem;
        font-weight: 500;
        text-decoration: none;
        border-radius: var(--radius-sm);
        transition: all 0.3s;
        position: relative;
    }

    .nav-link::after {
        content: "";
        position: absolute;
        bottom: 0.2rem;
        left: 50%;
        transform: translateX(-50%) scaleX(0);
        width: 60%;
        height: 2px;
        background: var(--gradient-primary);
        border-radius: 2px;
        transition: transform 0.3s cubic-bezier(0.16, 1, 0.3, 1);
    }

    .nav-link:hover {
        color: var(--text-primary);
    }

    .nav-link:hover::after,
    .nav-link.active::after {
        transform: translateX(-50%) scaleX(1);
    }

    .nav-link.active {
        color: var(--text-primary);
    }

    .nav-link-ai {
        background: linear-gradient(135deg, #3b82f6 0%, #8b5cf6 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        font-weight: 700;
    }

    .nav-cta {
        padding: 0.6rem 1.4rem;
        font-size: 0.9rem;
        margin-left: 1rem;
    }

    /* Controls: Lang & Hamburger */
    .nav-controls {
        display: flex;
        align-items: center;
        gap: 1.5rem;
        z-index: 120; /* Keep controls above mobile menu */
    }

    .lang-toggle {
        display: flex;
        align-items: center;
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 20px;
        padding: 4px;
    }

    .lang-separator {
        width: 1px;
        height: 12px;
        background: rgba(255, 255, 255, 0.1);
        margin: 0 2px;
    }

    .lang-btn {
        background: none;
        border: none;
        color: var(--text-muted);
        font-size: 0.75rem;
        font-weight: 600;
        padding: 4px 10px;
        border-radius: 12px;
        cursor: pointer;
        transition: all 0.3s;
    }

    .lang-btn:hover {
        color: var(--text-primary);
    }

    .lang-btn.active {
        background: var(--accent-blue);
        color: white;
        box-shadow: 0 0 10px rgba(56, 189, 248, 0.3);
    }

    /* --- Hamburger Redesign --- */
    .hamburger-wrapper {
        display: none;
        position: relative;
        width: 44px;
        height: 44px;
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: var(--radius-md);
        padding: 0;
        cursor: pointer;
        z-index: 1001;
        transition: all 0.3s var(--ease-out-expo);
        align-items: center;
        justify-content: center;
    }

    .hamburger {
        position: relative;
        width: 22px;
        height: 16px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        z-index: 2;
    }

    .hamburger span {
        width: 100%;
        height: 2px;
        background: var(--text-primary);
        border-radius: 4px;
        transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
        transform-origin: left center;
    }

    .hamburger-wrapper.active {
        background: rgba(56, 189, 248, 0.1);
        border-color: rgba(56, 189, 248, 0.3);
        box-shadow: 0 0 20px rgba(56, 189, 248, 0.2);
    }

    .hamburger-wrapper.active .hamburger span:nth-child(1) {
        transform: rotate(45deg) translate(2px, -1px);
        background: var(--accent-blue);
    }

    .hamburger-wrapper.active .hamburger span:nth-child(2) {
        opacity: 0;
        transform: scaleX(0);
    }

    .hamburger-wrapper.active .hamburger span:nth-child(3) {
        transform: rotate(-45deg) translate(2px, 1px);
        background: var(--accent-blue);
    }

    .hamburger-glow {
        position: absolute;
        inset: 0;
        border-radius: var(--radius-md);
        background: radial-gradient(
            circle at center,
            var(--accent-blue),
            transparent
        );
        opacity: 0;
        filter: blur(10px);
        transition: opacity 0.3s;
    }

    .hamburger-wrapper:hover .hamburger-glow {
        opacity: 0.15;
    }

    @media (max-width: 768px) {
        .hamburger-wrapper {
            display: flex;
        }

        .nav-links {
            position: fixed;
            top: 0;
            right: -100%;
            width: 80vw;
            height: 100vh;
            background: rgba(10, 14, 26, 0.98);
            backdrop-filter: blur(25px);
            -webkit-backdrop-filter: blur(25px); /* Added for consistency */
            flex-direction: column;
            justify-content: center;
            align-items: center;
            gap: 2.5rem;
            padding: 2rem;
            border-left: 1px solid rgba(255, 255, 255, 0.05);
            transition: right 0.6s cubic-bezier(0.16, 1, 0.3, 1);
            box-shadow: -20px 0 50px rgba(0, 0, 0, 0.5);
            z-index: 110; /* Ensure it's above other content but below hamburger-wrapper */
        }

        .nav-links.open {
            right: 0;
        }

        .nav-links a {
            font-size: 1.5rem;
            font-weight: 600;
            opacity: 0;
            transform: translateX(30px);
            transition: all 0.5s var(--ease-out-expo);
        }

        .nav-links.open a {
            opacity: 1;
            transform: translateX(0);
        }

        /* Staggered entrance for links */
        .nav-links.open a:nth-child(1) {
            transition-delay: 0.1s;
        }
        .nav-links.open a:nth-child(2) {
            transition-delay: 0.2s;
        }
        .nav-links.open a:nth-child(3) {
            transition-delay: 0.3s;
        }
        .nav-links.open a:nth-child(4) {
            transition-delay: 0.4s;
        }
        .nav-links.open a:nth-child(5) {
            transition-delay: 0.5s;
        }
        .nav-links.open a:nth-child(6) {
            transition-delay: 0.6s;
        }
        .nav-links.open a:nth-child(7) {
            transition-delay: 0.7s;
        }

        .nav-links .btn-primary {
            width: 100%;
            justify-content: center;
            margin-top: 1rem;
        }

        .nav-cta {
            margin-left: 0;
            margin-top: 1.5rem;
            font-size: 1.1rem;
            padding: 1rem 2rem;
            opacity: 0;
            transform: translateY(20px);
            transition: all 0.4s ease 0.8s;
        }

        .nav-links.open .nav-cta {
            opacity: 1;
            transform: translateY(0);
        }

        .lang-toggle {
            /* Keep toggle visible on mobile */
            margin-right: 0.5rem;
        }
    }
</style>

<script>
    function initNavbar() {
        const runtime = ((window as any).__cvRuntime ||= {});
        if (runtime.navbarInitialized) {
            return;
        }

        const hamburger = document.querySelector(
            ".hamburger-wrapper",
        ) as HTMLElement | null;
        const navLinks = document.querySelector(
            ".nav-links",
        ) as HTMLElement | null;
        const layoutBody = document.body;

        if (hamburger && navLinks) {
            hamburger.addEventListener("click", () => {
                hamburger.classList.toggle("active");
                navLinks.classList.toggle("open");
                layoutBody.classList.toggle("menu-open");
            });

            // Close menu on link click
            navLinks.querySelectorAll("a").forEach((link) => {
                link.addEventListener("click", () => {
                    hamburger.classList.remove("active");
                    navLinks.classList.remove("open");
                    layoutBody.classList.remove("menu-open");
                });
            });

            // Close on escape
            document.addEventListener("keydown", (e) => {
                if (e.key === "Escape" && navLinks.classList.contains("open")) {
                    hamburger.classList.remove("active");
                    navLinks.classList.remove("open");
                    layoutBody.classList.remove("menu-open");
                }
            });

            runtime.navbarInitialized = true;
        }
    }

    function updateActiveNav() {
        const navLinksElement = document.querySelector(
            ".nav-links",
        ) as HTMLElement | null;

        if (!navLinksElement) {
            return;
        }

        const currentPath = window.location.pathname;
        navLinksElement.querySelectorAll(".nav-link").forEach((link) => {
            link.classList.remove("active");
            const href = link.getAttribute("href");
            if (
                href === currentPath ||
                (href !== "/" && currentPath.startsWith(href || ""))
            ) {
                link.classList.add("active");
            }
        });
    }

    initNavbar();
    updateActiveNav();

    const runtime = ((window as any).__cvRuntime ||= {});
    if (!runtime.navActivePathBound) {
        document.addEventListener("astro:after-swap", updateActiveNav);
        runtime.navActivePathBound = true;
    }
</script>
