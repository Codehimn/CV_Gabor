            </div>

            <button class="hamburger" aria-label="Toggle menu">
                <span></span>
                <span></span>
                <span></span>
            </button>
        </div>
    </div>
</nav>

<style>
    .navbar {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        z-index: 100;
        padding: 1.2rem 0;
        transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    }

    .navbar.scrolled {
        background: rgba(10, 14, 26, 0.85);
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
        border-bottom: 1px solid rgba(56, 189, 248, 0.08);
        padding: 0.8rem 0;
    }

    .nav-container {
        width: min(1200px, 90vw);
        margin: 0 auto;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .nav-logo {
        font-family: var(--font-mono);
        font-size: 1.4rem;
        font-weight: 700;
        text-decoration: none;
        color: var(--text-primary);
        transition: all 0.3s;
        z-index: 120; /* Keep logo above mobile menu */
    }

    .logo-bracket {
        color: var(--accent-blue);
    }

    .logo-name {
        background: var(--gradient-primary);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .nav-logo:hover {
        transform: scale(1.05);
    }

    .nav-links {
        display: flex;
        align-items: center;
        list-style: none;
        gap: 0.5rem;
    }

    .nav-link {
        padding: 0.5rem 0.9rem;
        color: var(--text-secondary);
        font-size: 0.9rem;
        font-weight: 500;
        text-decoration: none;
        border-radius: var(--radius-sm);
        transition: all 0.3s;
        position: relative;
    }

    .nav-link::after {
        content: "";
        position: absolute;
        bottom: 0.2rem;
        left: 50%;
        transform: translateX(-50%) scaleX(0);
        width: 60%;
        height: 2px;
        background: var(--gradient-primary);
        border-radius: 2px;
        transition: transform 0.3s cubic-bezier(0.16, 1, 0.3, 1);
    }

    .nav-link:hover {
        color: var(--text-primary);
    }

    .nav-link:hover::after,
    .nav-link.active::after {
        transform: translateX(-50%) scaleX(1);
    }

    .nav-link.active {
        color: var(--text-primary);
    }

    .nav-link-ai {
        background: linear-gradient(135deg, #3b82f6 0%, #8b5cf6 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        font-weight: 700;
    }

    .nav-cta {
        padding: 0.6rem 1.4rem;
        font-size: 0.9rem;
        margin-left: 1rem;
    }

    /* Controls: Lang & Hamburger */
    .nav-controls {
        display: flex;
        align-items: center;
        gap: 1.5rem;
        z-index: 120; /* Keep controls above mobile menu */
    }

    .lang-toggle {
        display: flex;
        align-items: center;
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 20px;
        padding: 4px;
    }

    .lang-separator {
        width: 1px;
        height: 12px;
        background: rgba(255, 255, 255, 0.1);
        margin: 0 2px;
    }

    .lang-btn {
        background: none;
        border: none;
        color: var(--text-muted);
        font-size: 0.75rem;
        font-weight: 600;
        padding: 4px 10px;
        border-radius: 12px;
        cursor: pointer;
        transition: all 0.3s;
    }

    .lang-btn:hover {
        color: var(--text-primary);
    }

    .lang-btn.active {
        background: var(--accent-blue);
        color: white;
        box-shadow: 0 0 10px rgba(56, 189, 248, 0.3);
    }

    /* Hamburger */
    .hamburger {
        display: none;
        flex-direction: column;
        gap: 6px;
        background: none;
        border: none;
        cursor: pointer;
        padding: 0;
        z-index: 120;
    }

    .hamburger span {
        display: block;
        width: 26px;
        height: 2px;
        background: var(--text-primary);
        border-radius: 2px;
        transition: all 0.3s;
    }

    .hamburger.active span:nth-child(1) {
        transform: rotate(45deg) translate(5px, 6px);
    }
    .hamburger.active span:nth-child(2) {
        opacity: 0;
        transform: translateX(-10px);
    }
    .hamburger.active span:nth-child(3) {
        transform: rotate(-45deg) translate(5px, -6px);
    }

    @media (max-width: 768px) {
        .hamburger {
            display: flex;
        }

        .nav-links {
            position: fixed;
            top: 0;
            right: -100%;
            width: 100vw;
            height: 100vh;
            background: rgba(10, 14, 26, 0.98);
            backdrop-filter: blur(20px);
            -webkit-backdrop-filter: blur(20px);
            flex-direction: column;
            justify-content: center;
            align-items: center;
            gap: 2.5rem;
            padding: 2rem;
            transition: right 0.5s cubic-bezier(0.16, 1, 0.3, 1);
            z-index: 110;
        }

        .nav-links.open {
            right: 0;
        }

        .nav-link {
            font-size: 2rem;
            font-weight: 700;
            padding: 0;
            opacity: 0;
            transform: translateY(20px);
            transition: all 0.4s ease 0s;
        }

        .nav-links.open .nav-link {
            opacity: 1;
            transform: translateY(0);
        }

        /* Stagger animation for links */
        .nav-links.open li:nth-child(1) .nav-link {
            transition-delay: 0.1s;
        }
        .nav-links.open li:nth-child(2) .nav-link {
            transition-delay: 0.2s;
        }
        .nav-links.open li:nth-child(3) .nav-link {
            transition-delay: 0.3s;
        }
        .nav-links.open li:nth-child(4) .nav-link {
            transition-delay: 0.4s;
        }
        .nav-links.open li:nth-child(5) .nav-link {
            transition-delay: 0.5s;
        }
        .nav-links.open li:nth-child(6) .nav-link {
            transition-delay: 0.6s;
        }
        .nav-links.open li:nth-child(7) .nav-link {
            transition-delay: 0.7s;
        }

        .nav-cta {
            margin-left: 0;
            margin-top: 1.5rem;
            font-size: 1.1rem;
            padding: 1rem 2rem;
            opacity: 0;
            transform: translateY(20px);
            transition: all 0.4s ease 0.8s;
        }

        .nav-links.open .nav-cta {
            opacity: 1;
            transform: translateY(0);
        }

        .lang-toggle {
            /* Keep toggle visible on mobile */
            margin-right: 0.5rem;
        }
    }
</style>

<script>
    const navbar = document.querySelector(".navbar") as HTMLElement | null;
    const hamburger = document.querySelector(
        ".hamburger",
    ) as HTMLElement | null;
    const navLinks = document.querySelector(".nav-links") as HTMLElement | null;

    if (navbar) {
        window.addEventListener("scroll", () => {
            if (window.scrollY > 50) {
                navbar.classList.add("scrolled");
            } else {
                navbar.classList.remove("scrolled");
            }
        });
    }

    if (hamburger && navLinks) {
        hamburger.addEventListener("click", () => {
            hamburger.classList.toggle("active");
            navLinks.classList.toggle("open");
        });

        // Close menu when clicking a link
        navLinks.querySelectorAll(".nav-link").forEach((link) => {
            link.addEventListener("click", () => {
                hamburger.classList.remove("active");
                navLinks.classList.remove("open");
            });
        });

        // Current Path Highlighting
        const currentPath = window.location.pathname;
        navLinks.querySelectorAll(".nav-link").forEach((link) => {
            const href = link.getAttribute("href");
            if (
                href === currentPath ||
                (href !== "/" && currentPath.startsWith(href || ""))
            ) {
                link.classList.add("active");
            }
        });
    }
</script>
