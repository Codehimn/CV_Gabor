---
import { translations } from "../i18n";
const experiences = translations.en.experience.items;
---

<section class="experience zoom-section" id="experience">
    <div class="zoom-bg experience-bg"></div>
    <div class="container experience-container">
        <div class="experience-header reveal">
            <p class="section-label" data-i18n="experience.label">
                Career Path
            </p>
            <h2 class="section-title" data-i18n="experience.title">
                Where I've <span class="gradient-text">Made Impact</span>
            </h2>
            <p class="section-subtitle" data-i18n="experience.subtitle">
                From IT support to senior automation and backend development â€” a
                journey of continuous growth.
            </p>
        </div>

        <div class="timeline">
            <div class="timeline-line"></div>

            {
                experiences.map((_, i) => (
                    <div
                        class={`timeline-item ${i % 2 === 0 ? "left" : "right"} reveal`}
                        style={`transition-delay: ${i * 0.1}s`}
                    >
                        <div class="timeline-dot-wrapper">
                            <div class="timeline-dot">
                                <span
                                    data-i18n={`experience.items.${i}.icon`}
                                />
                            </div>
                        </div>

                        <div class="timeline-card glass-card">
                            <div class="card-header">
                                <div>
                                    <h3
                                        class="card-company"
                                        data-i18n={`experience.items.${i}.company`}
                                    />
                                    <p
                                        class="card-role"
                                        data-i18n={`experience.items.${i}.role`}
                                    />
                                </div>
                                <div class="card-meta">
                                    <span
                                        class="card-period"
                                        data-i18n={`experience.items.${i}.period`}
                                    />
                                    <span
                                        class="card-location"
                                        data-i18n={`experience.items.${i}.location`}
                                    />
                                </div>
                            </div>

                            <p
                                class="card-description"
                                data-i18n={`experience.items.${i}.description`}
                            />

                            <div
                                class="card-tags"
                                data-i18n-tags={`experience.items.${i}.tags`}
                            >
                                {/* Tags will be populated via JS if needed, or we can handle them specifically */}
                            </div>
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</section>

<style>
    /* Styling remains mostly the same, but I'll optimize for premium feel */
    .experience {
        padding: var(--section-padding) 0;
        min-height: auto;
        display: block;
    }

    .experience-bg {
        background: radial-gradient(
            ellipse 50% 40% at 70% 30%,
            rgba(56, 189, 248, 0.04) 0%,
            transparent 60%
        );
    }

    .experience-container {
        position: relative;
        z-index: 2;
    }

    .experience-header {
        text-align: center;
        margin-bottom: 4rem;
    }

    .timeline {
        position: relative;
        max-width: 900px;
        margin: 0 auto;
    }

    .timeline-line {
        position: absolute;
        left: 50%;
        top: 0;
        bottom: 0;
        width: 2px;
        background: linear-gradient(
            180deg,
            transparent,
            rgba(56, 189, 248, 0.5),
            rgba(99, 102, 241, 0.5),
            rgba(244, 114, 182, 0.5),
            transparent
        );
        transform: translateX(-50%);
    }

    .timeline-item {
        position: relative;
        display: flex;
        align-items: flex-start;
        margin-bottom: 4rem;
        width: 50%;
    }

    .timeline-item.left {
        padding-right: 4rem;
        justify-content: flex-end;
    }

    .timeline-item.right {
        margin-left: 50%;
        padding-left: 4rem;
    }

    .timeline-dot-wrapper {
        position: absolute;
        z-index: 3;
        top: 2rem;
    }

    .timeline-item.left .timeline-dot-wrapper {
        right: -20px;
    }

    .timeline-item.right .timeline-dot-wrapper {
        left: -20px;
    }

    .timeline-dot {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.1rem;
        border: 2px solid rgba(56, 189, 248, 0.3);
        background: var(--bg-card);
        backdrop-filter: blur(10px);
        box-shadow: 0 0 20px rgba(56, 189, 248, 0.1);
        transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    }

    .timeline-item:hover .timeline-dot {
        border-color: var(--accent-blue);
        box-shadow: 0 0 30px rgba(56, 189, 248, 0.3);
        transform: scale(1.1);
    }

    .timeline-card {
        padding: 2rem;
        max-width: 420px;
        width: 100%;
        transition: transform 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    }

    .timeline-card:hover {
        transform: translateY(-5px);
    }

    .card-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 1.2rem;
        gap: 1rem;
    }

    .card-company {
        font-size: 1.4rem;
        font-weight: 800;
        margin-bottom: 0.2rem;
        letter-spacing: -0.01em;
    }

    .card-role {
        font-size: 0.95rem;
        color: var(--accent-blue);
        font-weight: 600;
    }

    .card-meta {
        display: flex;
        flex-direction: column;
        align-items: flex-end;
        gap: 0.3rem;
        flex-shrink: 0;
    }

    .card-period {
        font-family: var(--font-mono);
        font-size: 0.75rem;
        color: var(--text-muted);
        white-space: nowrap;
    }

    .card-location {
        font-size: 0.75rem;
        color: var(--text-muted);
        white-space: nowrap;
        opacity: 0.8;
    }

    .card-description {
        font-size: 0.95rem;
        color: var(--text-secondary);
        line-height: 1.8;
        margin-bottom: 1.5rem;
    }

    .card-tags {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
    }

    @media (max-width: 768px) {
        .timeline-line {
            left: 20px;
        }

        .timeline-item {
            width: 100%;
            padding-left: 60px !important;
            padding-right: 0 !important;
            justify-content: flex-start !important;
            margin-bottom: 3rem;
        }

        .timeline-item.right {
            margin-left: 0;
        }

        .timeline-dot-wrapper {
            left: 0 !important;
            right: auto !important;
        }

        .timeline-card {
            max-width: 100%;
        }

        .card-header {
            flex-direction: column;
            gap: 0.5rem;
        }

        .card-meta {
            align-items: flex-start;
        }
    }
</style>
