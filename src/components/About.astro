---
import { translations } from "../i18n";

const { lang = "en" } = Astro.props;
const t = translations[lang as "en" | "es"].about;
---

<section class="about" id="about">
    <div class="container">
        <div class="about-header reveal">
            <p class="section-label" data-i18n="about.label">{t.label}</p>
            <h2 class="section-title">
                <span data-i18n="about.title">{t.title}</span>
            </h2>
        </div>

        <div class="about-bento stagger-children">
            <!-- Large Bio Card -->
            <div class="bento-card bento-bio glass-card reveal-left">
                <div class="bio-content">
                    <div class="about-image-wrapper">
                        <img
                            src="/images/profile/Gabor-Flandorffer-Profile.jpg"
                            alt="Gabor Flandorffer"
                            class="about-photo"
                            loading="eager"
                            decoding="async"
                            fetchpriority="high"
                        />
                        <div class="about-image-border"></div>
                    </div>
                    <div class="bio-text">
                        <p class="lead" data-i18n="about.p1">
                            {t.p1}
                        </p>
                        <div class="about-actions">
                            <a
                                href="/pdf/CV Gabor Flandorffer 2026 ENG.pdf"
                                target="_blank"
                                class="btn btn-outline cv-download-btn"
                                id="about-cv-link"
                                data-cv-en="/pdf/CV Gabor Flandorffer 2026 ENG.pdf"
                                data-cv-es="/pdf/CV Gabor Flandorffer 2026 ENG.pdf"
                            >
                                <span data-i18n="about.download_cv"
                                    >{t.download_cv}</span
                                >
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Expertise Card -->
            <div class="bento-card bento-expertise glass-card reveal-up">
                <div class="card-header">
                    <span class="card-icon" aria-hidden="true">
                        <svg
                            width="20"
                            height="20"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="1.8"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                        >
                            <path d="M20 16V8a2 2 0 0 0-2-2H6a2 2 0 0 0-2 2v8" />
                            <path d="M8 20h8" />
                            <path d="M12 16v4" />
                        </svg>
                    </span>
                    <h3 data-i18n="about.expertise_title">Core Expertise</h3>
                </div>
                <ul class="expertise-list">
                    <li>
                        <span data-i18n="about.expertise_item_1_label">Python / Django</span>
                        <span data-i18n="about.expertise_item_1_value">11+ yrs</span>
                    </li>
                    <li>
                        <span data-i18n="about.expertise_item_2_label">Automation</span>
                        <span data-i18n="about.expertise_item_2_value">Expert</span>
                    </li>
                    <li>
                        <span data-i18n="about.expertise_item_3_label">Full-Stack</span>
                        <span data-i18n="about.expertise_item_3_value">Architecture</span>
                    </li>
                </ul>
            </div>

            <!-- Location/Availability Card -->
            <div class="bento-card bento-status glass-card reveal-up">
                <div class="status-item">
                    <span class="status-icon" aria-hidden="true">
                        <svg
                            width="20"
                            height="20"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="1.8"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                        >
                            <path d="M20 10c0 5.4-8 12-8 12s-8-6.6-8-12a8 8 0 1 1 16 0Z" />
                            <circle cx="12" cy="10" r="3" />
                        </svg>
                    </span>
                    <div>
                        <p class="status-label" data-i18n="about.location_label">Location</p>
                        <p class="status-value" data-i18n="about.location_value">Medell√≠n, Colombia</p>
                    </div>
                </div>
                <div class="status-item">
                    <span class="status-icon" aria-hidden="true">
                        <svg
                            width="20"
                            height="20"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="1.8"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                        >
                            <path d="M4.5 19.5c1.2-2.4 3.6-3 5.4-3 2.8 0 4.7 1.2 5.8 2.5" />
                            <circle cx="17" cy="7" r="4" />
                            <path d="M17 3v8" />
                            <path d="M13 7h8" />
                        </svg>
                    </span>
                    <div>
                        <p class="status-label" data-i18n="about.availability_label">Availability</p>
                        <p class="status-value" data-i18n="hero.badge">
                            Available for projects
                        </p>
                    </div>
                </div>
            </div>

            <!-- Social/Link Card -->
            <div class="bento-card bento-social glass-card reveal-right">
                <div class="card-header">
                    <h3 data-i18n="nav.contact">Contact</h3>
                </div>
                <div class="social-links-grid">
                    <a
                        href="https://linkedin.com/in/gabor-flandorffer/"
                        target="_blank"
                        class="social-link-btn linkedin"
                    >
                        <svg
                            width="20"
                            height="20"
                            viewBox="0 0 24 24"
                            fill="currentColor"
                            ><path
                                d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"
                            ></path></svg
                        >
                    </a>
                    <a
                        href="https://www.freelancer.com/u/Codehimn"
                        target="_blank"
                        class="social-link-btn freelancer"
                    >
                        <span>F</span>
                    </a>
                    <a
                        href="https://github.com/codehimn"
                        target="_blank"
                        class="social-link-btn github"
                    >
                        <svg
                            width="20"
                            height="20"
                            viewBox="0 0 24 24"
                            fill="currentColor"
                            ><path
                                d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.205 11.385.6.113.82-.258.82-.577 0-.285-.01-1.04-.015-2.04-3.338.724-4.042-1.61-4.042-1.61C4.422 18.07 3.633 17.7 3.633 17.7c-1.087-.744.084-.729.084-.729 1.205.084 1.838 1.236 1.838 1.236 1.07 1.835 2.809 1.305 3.495.998.108-.776.417-1.305.76-1.605-2.665-.3-5.466-1.332-5.466-5.93 0-1.31.465-2.38 1.235-3.22-.135-.303-.54-1.523.105-3.176 0 0 1.005-.322 3.3 1.23.96-.267 1.98-.399 3-.405 1.02.006 2.04.138 3 .405 2.28-1.552 3.285-1.23 3.285-1.23.645 1.653.24 2.873.12 3.176.765.84 1.23 1.91 1.23 3.22 0 4.61-2.805 5.625-5.475 5.92.42.36.81 1.096.81 2.22 0 1.606-.015 2.896-.015 3.286 0 .315.21.69.825.57C20.565 21.795 24 17.298 24 12c0-6.627-5.373-12-12-12"
                            ></path></svg
                        >
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .about {
        padding: var(--section-padding) 0;
        position: relative;
    }

    .about-header {
        text-align: center;
        margin-bottom: 2.4rem;
    }

    .about-bento {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        grid-template-rows: auto auto;
        gap: 1.5rem;
    }

    .bento-card {
        padding: 1.4rem;
        height: 100%;
        transition:
            transform 0.4s var(--ease-out-expo),
            border-color 0.3s;
    }

    .bento-card:hover {
        transform: translateY(-5px);
        border-color: rgba(56, 189, 248, 0.3);
    }

    .bento-bio {
        grid-column: span 2;
        grid-row: span 1;
    }

    .bio-content {
        display: flex;
        gap: 1.4rem;
        align-items: center;
    }

    .about-image-wrapper {
        position: relative;
        flex-shrink: 0;
    }

    .about-photo {
        width: 140px;
        height: 140px;
        object-fit: cover;
        border-radius: var(--radius-lg);
        position: relative;
        z-index: 2;
        transition: transform 0.3s var(--ease-out-expo);
    }

    .about-image-border {
        position: absolute;
        inset: -8px;
        border: 2px solid var(--accent-blue);
        border-radius: calc(var(--radius-lg) + 4px);
        opacity: 0.2;
        z-index: 1;
        transition: all 0.3s;
    }

    .bento-card:hover .about-image-border {
        opacity: 0.5;
        inset: -12px;
    }

    .bio-text {
        flex: 1;
    }

    .lead {
        font-size: 1rem;
        line-height: 1.62;
        color: var(--text-secondary);
        margin-bottom: 1rem;
    }

    /* Expertise Card */
    .card-header {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        margin-bottom: 1.1rem;
    }

    .card-icon {
        width: 34px;
        height: 34px;
        border-radius: 10px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        color: var(--accent-blue);
        background: rgba(56, 189, 248, 0.12);
        border: 1px solid rgba(56, 189, 248, 0.2);
    }

    .card-header h3 {
        font-size: 1.1rem;
        font-weight: 700;
        color: var(--text-primary);
    }

    .expertise-list {
        list-style: none;
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

    .expertise-list li {
        display: flex;
        justify-content: space-between;
        font-size: 0.86rem;
        color: var(--text-secondary);
        padding-bottom: 0.42rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    }

    .expertise-list li span:last-child {
        color: var(--accent-blue);
        font-family: var(--font-mono);
        font-weight: 600;
    }

    /* Status Card */
    .bento-status {
        display: flex;
        flex-direction: column;
        justify-content: center;
        gap: 1rem;
    }

    .status-item {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .status-icon {
        background: rgba(56, 189, 248, 0.1);
        color: var(--accent-blue);
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 10px;
        border: 1px solid rgba(56, 189, 248, 0.2);
    }

    .status-label {
        font-size: 0.75rem;
        color: var(--text-muted);
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .status-value {
        font-size: 0.9rem;
        font-weight: 600;
        color: var(--text-primary);
    }

    /* Social Card */
    .social-links-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 0.75rem;
    }

    .social-link-btn {
        height: 48px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 12px;
        color: var(--text-secondary);
        transition: all 0.3s;
        text-decoration: none;
    }

    .social-link-btn:hover {
        background: var(--accent-blue);
        color: white;
        border-color: var(--accent-blue);
        transform: translateY(-3px);
        box-shadow: 0 10px 20px rgba(56, 189, 248, 0.2);
    }

    .social-link-btn.freelancer {
        font-family: var(--font-heading);
        font-weight: 900;
        font-size: 1.4rem;
    }

    @media (max-width: 1024px) {
        .about-bento {
            grid-template-columns: repeat(2, 1fr);
        }
        .bento-bio {
            grid-column: span 2;
        }
    }

    @media (max-width: 768px) {
        .about-bento {
            grid-template-columns: 1fr;
        }

        .about-header {
            margin-bottom: 2rem;
        }

        .bento-bio {
            grid-column: span 1;
        }
        .bio-content {
            flex-direction: column;
            text-align: center;
        }
    }
</style>

<script>
    function initAboutScroll() {
        const photoWrapper = document.querySelector(".about-image-wrapper");
        const photo = document.querySelector(".about-photo") as HTMLElement;
        const border = document.querySelector(
            ".about-image-border",
        ) as HTMLElement;

        if (photoWrapper && photo && border) {
            const wrapperEl = photoWrapper as HTMLElement;
            if (wrapperEl.dataset.tiltBound !== "true") {
                photoWrapper.addEventListener("mousemove", (e: any) => {
                    const rect = photoWrapper.getBoundingClientRect();
                    const x = (e.clientX - rect.left) / rect.width - 0.5;
                    const y = (e.clientY - rect.top) / rect.height - 0.5;

                    photo.style.transform = `perspective(1000px) rotateY(${x * 15}deg) rotateX(${y * -15}deg) scale(1.05)`;
                    border.style.transform = `translate(${x * 20}px, ${y * 20}px)`;
                });

                photoWrapper.addEventListener("mouseleave", () => {
                    photo.style.transform = `perspective(1000px) rotateY(0) rotateX(0) scale(1)`;
                    border.style.transform = `translate(0, 0)`;
                });

                wrapperEl.dataset.tiltBound = "true";
            }
        }

        // Language toggle for CV download
        const aboutCvLink = document.getElementById(
            "about-cv-link",
        ) as HTMLAnchorElement;
        function updateAboutCv() {
            if (!aboutCvLink) return;
            const lang = localStorage.getItem("preferred-lang") || "en";
            aboutCvLink.href =
                lang === "es"
                    ? aboutCvLink.dataset.cvEs || ""
                    : aboutCvLink.dataset.cvEn || "";
        }
        updateAboutCv();
        const runtime = ((window as any).__cvRuntime ||= {});
        if (runtime.aboutLangChangedHandler) {
            window.removeEventListener("langChanged", runtime.aboutLangChangedHandler);
        }

        runtime.aboutLangChangedHandler = updateAboutCv;
        window.addEventListener("langChanged", runtime.aboutLangChangedHandler);
    }

    initAboutScroll();
    document.addEventListener("astro:after-swap", initAboutScroll);
</script>
