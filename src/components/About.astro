        color: var(--text-secondary);
        margin-bottom: 1rem;
        font-size: 1rem;
        line-height: 1.8;
    }

    .about-text strong {
        color: var(--text-primary);
    }

    /* â”€â”€ CTA Row â”€â”€ */
    .about-cta-row {
        display: flex;
        flex-wrap: wrap;
        gap: 0.8rem;
        margin-top: 2rem;
    }

    .download-cv-btn {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

    .social-btn {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.7rem 1.2rem;
        font-size: 0.85rem;
    }

    /* â”€â”€ Stats Bar â”€â”€ */
    .stats-bar {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 2.5rem;
        margin-top: 4rem;
        padding: 2.5rem 3rem;
        border-radius: var(--radius-xl);
        background: rgba(255, 255, 255, 0.02);
        border: 1px solid rgba(255, 255, 255, 0.06);
        backdrop-filter: blur(12px);
    }

    .stat-item {
        text-align: center;
        position: relative;
    }

    .stat-number {
        font-size: clamp(2rem, 4vw, 2.8rem);
        font-weight: 800;
        background: var(--gradient-primary);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        line-height: 1;
    }

    .stat-suffix {
        font-size: 1.4rem;
        font-weight: 700;
        color: var(--accent-blue);
        margin-left: 1px;
    }

    .stat-label {
        display: block;
        font-size: 0.72rem;
        color: var(--text-muted);
        text-transform: uppercase;
        letter-spacing: 0.12em;
        margin-top: 0.5rem;
        font-family: var(--font-mono);
    }

    .stat-divider {
        width: 1px;
        height: 48px;
        background: linear-gradient(
            180deg,
            transparent,
            rgba(56, 189, 248, 0.2),
            transparent
        );
    }

