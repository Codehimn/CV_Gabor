<script>
    function initAbout() {
        // Language-aware CV download
        const cvBtn = document.getElementById(
            "download-cv-btn",
        ) as HTMLAnchorElement;
        const linkedinBtn = document.getElementById(
            "linkedin-btn",
        ) as HTMLAnchorElement;

        function updateLinks() {
            const lang = localStorage.getItem("lang") || "en";
            if (cvBtn) {
                cvBtn.href =
                    lang === "es"
                        ? cvBtn.dataset.cvEs || ""
                        : cvBtn.dataset.cvEn || "";
            }
            if (linkedinBtn) {
                linkedinBtn.href =
                    lang === "es"
                        ? linkedinBtn.dataset.linkedinEs || ""
                        : linkedinBtn.dataset.linkedinEn || "";
            }
        }

        updateLinks();
        window.addEventListener("langChanged", updateLinks);

        // Counter animation for stats bar
        const counters = document.querySelectorAll(
            ".stats-bar .stat-number[data-count]",
        );
        const observer = new IntersectionObserver(
            (entries) => {
                entries.forEach((entry) => {
                    if (entry.isIntersecting) {
                        const el = entry.target as HTMLElement;
                        const target = parseInt(el.dataset.count || "0");
                        let count = 0;
                        const duration = 1800;
                        const step = target / (duration / 16);
                        const timer = setInterval(() => {
                            count += step;
                            if (count >= target) {
                                el.textContent = target.toString();
                                clearInterval(timer);
                            } else {
                                el.textContent = Math.floor(count).toString();
                            }
                        }, 16);
                        observer.unobserve(el);
                    }
                });
            },
            { threshold: 0.5 },
        );
        counters.forEach((c) => observer.observe(c));
    }

    initAbout();
    document.addEventListener("astro:after-swap", initAbout);
</script>

<style>
    .about {
        padding: var(--section-padding) 0;
