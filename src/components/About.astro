<style>
    .about {
        padding: var(--section-padding) 0;
        position: relative;
    }

    .about::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: radial-gradient(
            ellipse 60% 40% at 20% 50%,
            rgba(129, 140, 248, 0.05) 0%,
            transparent 60%
        );
        pointer-events: none;
    }

    .about-grid {
        display: grid;
        grid-template-columns: 1fr 1.3fr;
        gap: 4rem;
        align-items: center;
    }

    .section-label {
        font-family: var(--font-mono);
        font-size: 0.85rem;
        color: var(--accent-blue);
        text-transform: uppercase;
        letter-spacing: 0.15em;
        margin-bottom: 0.75rem;
        font-weight: 600;
    }

    .about-visual {
        position: relative;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1.5rem;
    }

    .about-image-wrapper {
        position: relative;
        width: 280px;
        height: 320px;
    }

    .about-image-placeholder {
        width: 100%;
        height: 100%;
        border-radius: var(--radius-xl);
        background: linear-gradient(
            135deg,
            var(--bg-card),
            var(--bg-card-hover)
        );
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        z-index: 2;
        overflow: hidden;
    }

    .placeholder-icon {
        font-size: 4rem;
        font-weight: 900;
        background: var(--gradient-primary);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .about-image-border {
        position: absolute;
        inset: -3px;
        border-radius: var(--radius-xl);
        background: var(--gradient-primary);
        z-index: 1;
        opacity: 0.6;
        animation: border-rotate 6s linear infinite;
    }

    @keyframes border-rotate {
        0% {
            filter: hue-rotate(0deg);
        }
        100% {
            filter: hue-rotate(360deg);
        }
    }

    .about-floating-card {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.8rem 1.2rem;
        font-size: 0.85rem;
        animation: float-card 4s ease-in-out infinite;
    }

    .about-floating-card p {
        color: var(--text-muted);
        font-size: 0.75rem;
        margin-top: 0.15rem;
    }

    .floating-emoji {
        font-size: 1.6rem;
    }

    @keyframes float-card {
        0%,
        100% {
            transform: translateY(0);
        }
        50% {
            transform: translateY(-8px);
        }
    }

    .about-text {
        color: var(--text-secondary);
        margin-bottom: 1rem;
        font-size: 1rem;
        line-height: 1.8;
    }

    .about-text strong {
        color: var(--text-primary);
    }

    .about-highlights {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 0.8rem;
        margin-top: 2rem;
    }

    .highlight {
        display: flex;
        align-items: flex-start;
        gap: 0.75rem;
        padding: 1rem;
        font-size: 0.88rem;
    }

    .highlight-icon {
        font-size: 1.5rem;
        flex-shrink: 0;
    }

    .highlight strong {
        display: block;
        margin-bottom: 0.15rem;
        font-size: 0.85rem;
    }

    .highlight p {
        color: var(--text-muted);
        font-size: 0.78rem;
        font-family: var(--font-mono);
    }

    @media (max-width: 768px) {
        .about-grid {
            grid-template-columns: 1fr;
            gap: 2.5rem;
        }

        .about-visual {
            order: -1;
        }

        .about-image-wrapper {
            width: 200px;
            height: 240px;
        }

        .about-highlights {
            grid-template-columns: 1fr;
        }
    }
</style>
