---
const { lang = "en" } = Astro.props;
import { translations } from "../i18n";
const t = translations[lang as "en" | "es"].testimonials;
---

<section class="testimonials" id="testimonials">
    <div class="container">
        <div class="testimonials-header reveal">
            <p class="section-label" data-i18n="testimonials.label">
                {t.label}
            </p>
            <h2 class="section-title">
                <span data-i18n="testimonials.title">{t.title}</span>
                <span
                    class="gradient-text"
                    data-i18n="testimonials.title_accent">{t.title_accent}</span
                >
            </h2>
        </div>

        <div class="testimonials-grid stagger-children">
            {
                t.items.map((item, index) => (
                    <a
                        href={
                            item.link || "https://www.freelancer.com/u/Codehimn"
                        }
                        target="_blank"
                        rel="noopener noreferrer"
                        class="testimonial-card glass-card reveal-up interactive"
                    >
                        <div class="testimonial-header-row">
                            <div class="quote-icon">
                                <svg
                                    width="24"
                                    height="24"
                                    viewBox="0 0 24 24"
                                    fill="currentColor"
                                >
                                    <path d="M14.017 21L14.017 18C14.017 16.8954 14.9124 16 16.017 16H19.017C19.5693 16 20.017 15.5523 20.017 15V9C20.017 8.44772 19.5693 8 19.017 8H15.017C14.4647 8 14.017 8.44772 14.017 9V12C14.017 12.5523 13.5693 13 13.017 13H11.017V21H14.017ZM5.017 21L5.017 18C5.017 16.8954 5.91243 16 7.017 16H10.017C10.5693 16 11.017 15.5523 11.017 15V9C11.017 8.44772 10.5693 8 10.017 8H6.017C5.46472 8 5.017 8.44772 5.017 9V12C5.017 12.5523 4.5693 13 4.017 13H2.017V21H5.017Z" />
                                </svg>
                            </div>
                            <div class="testimonial-rating">
                                {[...Array(5)].map(() => (
                                    <svg
                                        width="16"
                                        height="16"
                                        viewBox="0 0 24 24"
                                        fill="#fbbf24"
                                    >
                                        <path d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z" />
                                    </svg>
                                ))}
                            </div>
                        </div>
                        <p
                            class="testimonial-quote"
                            data-i18n={`testimonials.items.${index}.quote`}
                        >
                            {item.quote}
                        </p>
                        <div class="testimonial-author">
                            <div class="author-info">
                                <h4
                                    data-i18n={`testimonials.items.${index}.author`}
                                >
                                    {item.author}
                                </h4>
                                <p
                                    data-i18n={`testimonials.items.${index}.role`}
                                >
                                    {item.role}
                                </p>
                            </div>
                            <div class="external-link-icon">
                                <svg
                                    width="16"
                                    height="16"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                >
                                    <>
                                        <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6" />
                                        <polyline points="15 3 21 3 21 9" />
                                        <line x1="10" y1="14" x2="21" y2="3" />
                                    </>
                                </svg>
                            </div>
                        </div>
                    </a>
                ))
            }
        </div>

        <div class="testimonials-cta reveal">
            <a
                href={t.profile_url || "https://www.freelancer.com/u/Codehimn"}
                target="_blank"
                rel="noopener noreferrer"
                class="btn btn-outline magnetic"
            >
                <span data-i18n="testimonials.view_profile"
                    >{t.view_profile || "View Profile on Freelancer.com"}</span
                >
            </a>
        </div>
    </div>
</section>

<style>
    .testimonials {
        padding: var(--section-padding) 0;
        position: relative;
    }

    .testimonials-header {
        text-align: center;
        margin-bottom: 2.2rem;
    }

    .testimonials-grid {
        display: grid;
        grid-template-columns: repeat(3, minmax(0, 1fr));
        gap: 1.5rem;
        margin-bottom: 1.5rem;
    }

    @media (max-width: 1100px) {
        .testimonials-grid {
            grid-template-columns: repeat(2, minmax(0, 1fr));
        }
    }

    .testimonial-card {
        padding: 1.35rem;
        display: flex;
        flex-direction: column;
        transition:
            transform 0.4s var(--ease-out-expo),
            border-color 0.3s ease;
        text-decoration: none; /* Reset link style */
        cursor: pointer;
    }

    .testimonial-header-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 0.8rem;
    }

    .testimonial-card:hover {
        transform: translateY(-10px);
        border-color: rgba(56, 189, 248, 0.4);
        background: rgba(255, 255, 255, 0.03);
    }

    .quote-icon {
        color: var(--accent-blue);
        opacity: 0.3;
    }

    .testimonial-rating {
        display: flex;
        gap: 2px;
    }

    .testimonial-quote {
        font-size: 0.98rem;
        line-height: 1.5;
        color: var(--text-secondary);
        margin-bottom: 0.9rem;
        font-style: italic;
        flex: 1;
    }

    .testimonial-author {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 1rem;
        padding-top: 1rem;
        border-top: 1px solid rgba(255, 255, 255, 0.05);
    }

    .author-info h4 {
        color: var(--text-primary);
        font-size: 0.95rem;
        font-weight: 700;
        margin-bottom: 0.2rem;
    }

    .author-info p {
        color: var(--accent-blue);
        font-size: 0.8rem;
        font-family: var(--font-mono);
        letter-spacing: 0.02em;
    }

    .external-link-icon {
        color: var(--text-muted);
        opacity: 0;
        transform: translateX(-5px);
        transition: all 0.3s ease;
    }

    .testimonial-card:hover .external-link-icon {
        opacity: 1;
        transform: translateX(0);
        color: var(--accent-blue);
    }

    .testimonials-cta {
        display: flex;
        justify-content: center;
        margin-top: 1.2rem;
    }

    @media (max-width: 768px) {
        .testimonials-grid {
            grid-template-columns: 1fr;
        }

        .testimonial-card {
            padding: 1.5rem;
        }
    }
</style>
