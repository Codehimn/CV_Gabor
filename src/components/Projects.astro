---
import { translations } from "../i18n";
const { lang = "en" } = Astro.props;
const projects = translations[lang as "en" | "es"].projects.items;

const projectIcons = ["radio", "bot", "flask", "rocket"];

function getProjectIcon(icon: string) {
    const icons: Record<string, string> = {
        radio: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round"><path d="M4.9 19A10 10 0 0 1 19 4.9"/><path d="M7.8 16.2a6 6 0 1 1 8.4-8.4"/><circle cx="12" cy="12" r="2"/></svg>`,
        bot: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="8" width="18" height="11" rx="2"/><path d="M7 8V6a5 5 0 0 1 10 0v2"/><path d="M9 13h.01"/><path d="M15 13h.01"/></svg>`,
        flask: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round"><path d="M10 2v6l-6 9a3 3 0 0 0 2.6 5h10.8a3 3 0 0 0 2.6-5l-6-9V2"/><path d="M8.5 13h7"/></svg>`,
        rocket: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round"><path d="M4.5 19.5c1.2-2.4 3.6-3 5.4-3 2.8 0 4.7 1.2 5.8 2.5"/><path d="M14 10 21 3"/><path d="M13 3h8v8"/><circle cx="9" cy="15" r="2.5"/></svg>`,
    };

    return icons[icon] || icons.rocket;
}
---

<section class="projects zoom-section" id="projects">
    <div class="zoom-bg projects-bg"></div>
    <div class="container zoom-content">
        <div class="projects-header reveal">
            <p class="section-label" data-i18n="projects.label">Portfolio</p>
            <h2 class="section-title" data-i18n="projects.title">
                Featured <span class="gradient-text">Projects</span>
            </h2>
            <p class="section-subtitle" data-i18n="projects.subtitle">
                Real-world solutions that demonstrate technical depth and
                business impact.
            </p>
        </div>

        <div class="projects-grid stagger-children">
            {
                projects.map((project, i) => (
                    <div
                        class={`project-card glass-card reveal-scale interactive`}
                        style={`transition-delay: ${i * 0.1}s`}
                    >
                        <div class={`project-icon-wrapper gradient-blue`}>
                            <span
                                class="project-icon"
                                aria-hidden="true"
                                set:html={getProjectIcon(projectIcons[i] || "rocket")}
                            ></span>
                        </div>

                        <div class="project-content">
                            <h3
                                class="project-title"
                                data-i18n={`projects.items.${i}.title`}
                            />
                            <p
                                class="project-role"
                                data-i18n={`projects.items.${i}.role`}
                            />
                            <span
                                class="project-period"
                                data-i18n={`projects.items.${i}.period`}
                            />

                            <p
                                class="project-description"
                                data-i18n={`projects.items.${i}.description`}
                            />

                            <div
                                class="project-tags"
                                data-i18n-tags={`projects.items.${i}.tags`}
                            >
                                {project.tags.map((tag) => (
                                    <span class="tag">{tag}</span>
                                ))}
                            </div>
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</section>

<style>
    .projects {
        padding: var(--section-padding) 0;
        position: relative;
    }

    .projects::before {
        content: "";
        position: absolute;
        inset: 0;
        background:
            linear-gradient(
                165deg,
                rgba(15, 22, 41, 0.9),
                rgba(21, 30, 52, 0.78)
            ),
            radial-gradient(
                circle at 20% 20%,
                rgba(56, 189, 248, 0.08),
                transparent 45%
            );
        clip-path: polygon(0 3%, 100% 0, 100% 97%, 0 100%);
        z-index: -1;
    }

    .projects-header {
        text-align: center;
        margin-bottom: 2.2rem;
    }

    .projects-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1.5rem;
    }

    .project-card {
        padding: 1.35rem;
        display: flex;
        gap: 1rem;
        align-items: flex-start;
        border-color: var(--border-soft);
    }

    .project-icon-wrapper {
        width: 44px;
        height: 44px;
        border-radius: var(--radius-md);
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
    }

    .gradient-cyan {
        background: linear-gradient(
            135deg,
            rgba(34, 211, 238, 0.15),
            rgba(56, 189, 248, 0.1)
        );
    }
    .gradient-indigo {
        background: linear-gradient(
            135deg,
            rgba(129, 140, 248, 0.15),
            rgba(99, 102, 241, 0.1)
        );
    }
    .gradient-blue {
        background: linear-gradient(
            135deg,
            rgba(56, 189, 248, 0.15),
            rgba(14, 165, 233, 0.1)
        );
    }
    .gradient-emerald {
        background: linear-gradient(
            135deg,
            rgba(52, 211, 153, 0.15),
            rgba(16, 185, 129, 0.1)
        );
    }

    .project-icon {
        width: 100%;
        height: 100%;
        color: var(--accent-blue);
        display: inline-flex;
        align-items: center;
        justify-content: center;
    }

    .project-icon svg {
        width: 20px;
        height: 20px;
    }

    .project-title {
        font-size: 1.15rem;
        font-weight: 700;
        margin-bottom: 0.25rem;
    }

    .project-role {
        font-size: 0.85rem;
        color: var(--accent-blue);
        font-weight: 500;
        margin-bottom: 0.15rem;
    }

    .project-period {
        font-family: var(--font-mono);
        font-size: 0.72rem;
        color: var(--text-muted);
    }

    .project-description {
        font-size: 0.86rem;
        color: var(--text-secondary);
        line-height: 1.58;
        margin: 0.7rem 0;
    }

    .project-card:hover {
        border-color: var(--border-accent);
    }

    .project-tags {
        display: flex;
        flex-wrap: wrap;
        gap: 0.4rem;
    }

    @media (max-width: 768px) {
        .projects-grid {
            grid-template-columns: 1fr;
        }

        .project-card {
            flex-direction: column;
            gap: 1rem;
        }
    }
</style>
