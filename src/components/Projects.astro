---
import { translations } from "../i18n";
const projects = translations.en.projects.items;
---

<section class="projects zoom-section" id="projects">
    <div class="zoom-bg projects-bg"></div>
    <div class="container zoom-content">
        <div class="projects-header reveal">
            <p class="section-label" data-i18n="projects.label">Portfolio</p>
            <h2 class="section-title" data-i18n="projects.title">
                Featured <span class="gradient-text">Projects</span>
            </h2>
            <p class="section-subtitle" data-i18n="projects.subtitle">
                Real-world solutions that demonstrate technical depth and
                business impact.
            </p>
        </div>

        <div class="projects-grid stagger-children">
            {
                projects.map((project, i) => (
                    <div
                        class={`project-card glass-card reveal-scale interactive`}
                        style={`transition-delay: ${i * 0.1}s`}
                    >
                        <div class={`project-icon-wrapper gradient-blue`}>
                            {/* Gradients can be randomized or mapped if needed, keeping simple for now */}
                            <span class="project-icon">
                                {i === 0
                                    ? "ðŸ“¡"
                                    : i === 1
                                      ? "ðŸ¤–"
                                      : i === 2
                                        ? "ðŸ§ª"
                                        : "ðŸš€"}
                            </span>
                        </div>

                        <div class="project-content">
                            <h3
                                class="project-title"
                                data-i18n={`projects.items.${i}.title`}
                            />
                            <p
                                class="project-role"
                                data-i18n={`projects.items.${i}.role`}
                            />
                            <span
                                class="project-period"
                                data-i18n={`projects.items.${i}.period`}
                            />

                            <p
                                class="project-description"
                                data-i18n={`projects.items.${i}.description`}
                            ></p>

                            <div
                                class="project-tags"
                                data-i18n-tags={`projects.items.${i}.tags`}
                            >
                                {/* Tags populated via JS */}
                            </div>
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</section>

<style>
    .projects {
        padding: var(--section-padding) 0;
        position: relative;
    }

    .projects::before {
        content: "";
        position: absolute;
        inset: 0;
        background:
            linear-gradient(165deg, rgba(15, 22, 41, 0.9), rgba(21, 30, 52, 0.78)),
            radial-gradient(circle at 20% 20%, rgba(56, 189, 248, 0.08), transparent 45%);
        clip-path: polygon(0 3%, 100% 0, 100% 97%, 0 100%);
        z-index: -1;
    }

    .projects-header {
        text-align: center;
        margin-bottom: 3rem;
    }

    .projects-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1.5rem;
    }

    .project-card {
        padding: 2rem;
        display: flex;
        gap: 1.5rem;
        align-items: flex-start;
        border-color: var(--border-soft);
    }

    .project-icon-wrapper {
        width: 56px;
        height: 56px;
        border-radius: var(--radius-md);
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
    }

    .gradient-cyan {
        background: linear-gradient(
            135deg,
            rgba(34, 211, 238, 0.15),
            rgba(56, 189, 248, 0.1)
        );
    }
    .gradient-indigo {
        background: linear-gradient(
            135deg,
            rgba(129, 140, 248, 0.15),
            rgba(99, 102, 241, 0.1)
        );
    }
    .gradient-blue {
        background: linear-gradient(
            135deg,
            rgba(56, 189, 248, 0.15),
            rgba(14, 165, 233, 0.1)
        );
    }
    .gradient-emerald {
        background: linear-gradient(
            135deg,
            rgba(52, 211, 153, 0.15),
            rgba(16, 185, 129, 0.1)
        );
    }

    .project-icon {
        font-size: 1.5rem;
    }

    .project-title {
        font-size: 1.15rem;
        font-weight: 700;
        margin-bottom: 0.25rem;
    }

    .project-role {
        font-size: 0.85rem;
        color: var(--accent-blue);
        font-weight: 500;
        margin-bottom: 0.15rem;
    }

    .project-period {
        font-family: var(--font-mono);
        font-size: 0.72rem;
        color: var(--text-muted);
    }

    .project-description {
        font-size: 0.88rem;
        color: var(--text-secondary);
        line-height: 1.7;
        margin: 1rem 0;
    }

    .project-card:hover {
        border-color: var(--border-accent);
    }

    .project-tags {
        display: flex;
        flex-wrap: wrap;
        gap: 0.4rem;
    }

    @media (max-width: 768px) {
        .projects-grid {
            grid-template-columns: 1fr;
        }

        .project-card {
            flex-direction: column;
            gap: 1rem;
        }
    }
</style>
