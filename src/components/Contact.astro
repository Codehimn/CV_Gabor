<script>
    function initContact() {
        // Dynamic year
        const yearEl = document.getElementById("footer-year");
        if (yearEl) yearEl.textContent = new Date().getFullYear().toString();

        // Language-aware links
        const linkedinCard = document.getElementById(
            "linkedin-contact-card",
        ) as HTMLAnchorElement;
        const cvCard = document.getElementById(
            "contact-download-cv",
        ) as HTMLAnchorElement;
        const waCard = document.getElementById(
            "whatsapp-card",
        ) as HTMLAnchorElement;

        function updateContactLinks() {
            const lang = localStorage.getItem("lang") || "en";
            if (linkedinCard) {
                linkedinCard.href =
                    lang === "es"
                        ? linkedinCard.dataset.linkedinEs || ""
                        : linkedinCard.dataset.linkedinEn || "";
            }
            if (cvCard) {
                cvCard.href =
                    lang === "es"
                        ? cvCard.dataset.cvEs || ""
                        : cvCard.dataset.cvEn || "";
            }
            if (waCard) {
                waCard.href =
                    lang === "es"
                        ? waCard.dataset.waEs || ""
                        : waCard.dataset.waEn || "";
            }
        }

        updateContactLinks();
        window.addEventListener("langChanged", updateContactLinks);
    }

    initContact();
    document.addEventListener("astro:after-swap", initContact);
</script>

<style>
    .contact {
        padding: var(--section-padding) 0;
        min-height: auto;
        display: block;
    }

    .contact-bg {
        background:
            radial-gradient(
                ellipse 60% 50% at 50% 60%,
                rgba(56, 189, 248, 0.06) 0%,
                transparent 60%
            ),
            radial-gradient(
                ellipse 40% 30% at 30% 40%,
                rgba(129, 140, 248, 0.05) 0%,
                transparent 50%
            );
    }

    .contact-container {
        position: relative;
        z-index: 2;
    }

    .contact-content {
        text-align: center;
        max-width: 700px;
        margin: 0 auto;
    }

    .section-label {
        font-family: var(--font-mono);
        font-size: 0.85rem;
        color: var(--accent-blue);
        text-transform: uppercase;
        letter-spacing: 0.15em;
        margin-bottom: 0.75rem;
        font-weight: 600;
    }

    .contact-text {
        font-size: 1.05rem;
        color: var(--text-secondary);
        line-height: 1.8;
        margin-bottom: 2.5rem;
    }

    .contact-text strong {
        color: var(--accent-emerald);
    }

    .contact-cards {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 0.8rem;
        max-width: 600px;
        margin: 0 auto;
    }

    .contact-card {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: 1.2rem 1.5rem;
        text-decoration: none;
        color: var(--text-primary);
        cursor: pointer;
    }

    .contact-card:hover {
        color: var(--text-primary);
    }

    .contact-card:hover .contact-arrow {
        transform: translateX(5px);
        opacity: 1;
    }

    .contact-card-accent {
        grid-column: 1 / -1;
        background: rgba(56, 189, 248, 0.04) !important;
        border-color: rgba(56, 189, 248, 0.15) !important;
    }

    .contact-card-accent:hover {
        border-color: rgba(56, 189, 248, 0.4) !important;
    }

    .contact-icon {
        width: 48px;
        height: 48px;
        border-radius: var(--radius-md);
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
    }

    .whatsapp-icon {
        background: rgba(37, 211, 102, 0.15);
        color: #25d366;
    }
    .email-icon {
        background: rgba(56, 189, 248, 0.15);
        color: var(--accent-blue);
    }
    .linkedin-icon {
        background: rgba(0, 119, 181, 0.15);
        color: #0077b5;
    }
    .github-icon {
        background: rgba(255, 255, 255, 0.08);
        color: var(--text-primary);
    }
    .cv-icon {
        background: rgba(56, 189, 248, 0.15);
        color: var(--accent-blue);
    }

    .contact-card div:not(.contact-icon) {
        text-align: left;
        flex: 1;
    }

    .contact-card strong {
        display: block;
        font-size: 0.95rem;
        margin-bottom: 0.1rem;
    }

    .contact-card p {
        font-size: 0.82rem;
        color: var(--text-muted);
        font-family: var(--font-mono);
    }

    .contact-arrow {
        font-size: 1.2rem;
        color: var(--text-muted);
        transition: all 0.3s;
        opacity: 0.5;
    }

    .footer {
        margin-top: 5rem;
        text-align: center;
    }

    .footer-line {
        width: 100%;
        height: 1px;
        background: linear-gradient(
            90deg,
            transparent,
            rgba(56, 189, 248, 0.15),
            transparent
        );
        margin-bottom: 2rem;
    }

    .footer-text {
        font-size: 0.85rem;
        color: var(--text-muted);
    }

    .footer-code {
        font-family: var(--font-mono);
        color: var(--accent-blue);
        opacity: 0.5;
    }

    @media (max-width: 600px) {
        .contact-cards {
            grid-template-columns: 1fr;
        }
        .contact-card {
            padding: 1rem;
        }
        .contact-card-accent {
            grid-column: auto;
        }
    }
</style>
