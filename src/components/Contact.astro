<style>
    .contact {
        padding: var(--section-padding) 0;
        min-height: auto;
        display: block;
    }

    .contact-bg {
        background:
            radial-gradient(
                ellipse 60% 50% at 50% 60%,
                rgba(56, 189, 248, 0.06) 0%,
                transparent 60%
            ),
            radial-gradient(
                ellipse 40% 30% at 30% 40%,
                rgba(129, 140, 248, 0.05) 0%,
                transparent 50%
            );
    }

    .contact-container {
        position: relative;
        z-index: 2;
    }

    .contact-content {
        text-align: center;
        max-width: 700px;
        margin: 0 auto;
    }

    .section-label {
        font-family: var(--font-mono);
        font-size: 0.85rem;
        color: var(--accent-blue);
        text-transform: uppercase;
        letter-spacing: 0.15em;
        margin-bottom: 0.75rem;
        font-weight: 600;
    }

    .contact-text {
        font-size: 1.05rem;
        color: var(--text-secondary);
        line-height: 1.8;
        margin-bottom: 2.5rem;
    }

    .contact-text strong {
        color: var(--accent-emerald);
    }

    .contact-cards {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        max-width: 480px;
        margin: 0 auto;
    }

    .contact-card {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: 1.2rem 1.5rem;
        text-decoration: none;
        color: var(--text-primary);
        cursor: pointer;
    }

    .contact-card:hover {
        color: var(--text-primary);
    }

    .contact-card:hover .contact-arrow {
        transform: translateX(5px);
        opacity: 1;
    }

    .contact-icon {
        width: 48px;
        height: 48px;
        border-radius: var(--radius-md);
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
    }

    .whatsapp-icon {
        background: rgba(37, 211, 102, 0.15);
        color: #25d366;
    }

    .email-icon {
        background: rgba(56, 189, 248, 0.15);
        color: var(--accent-blue);
    }

    .web-icon {
        background: rgba(129, 140, 248, 0.15);
        color: var(--accent-indigo);
    }

    .contact-card div:not(.contact-icon) {
        text-align: left;
        flex: 1;
    }

    .contact-card strong {
        display: block;
        font-size: 0.95rem;
        margin-bottom: 0.1rem;
    }

    .contact-card p {
        font-size: 0.82rem;
        color: var(--text-muted);
        font-family: var(--font-mono);
    }

    .contact-arrow {
        font-size: 1.2rem;
        color: var(--text-muted);
        transition: all 0.3s;
        opacity: 0.5;
    }

    .footer {
        margin-top: 5rem;
        text-align: center;
    }

    .footer-line {
        width: 100%;
        height: 1px;
        background: linear-gradient(
            90deg,
            transparent,
            rgba(56, 189, 248, 0.15),
            transparent
        );
        margin-bottom: 2rem;
    }

    .footer-text {
        font-size: 0.85rem;
        color: var(--text-muted);
    }

    .footer-code {
        font-family: var(--font-mono);
        color: var(--accent-blue);
        opacity: 0.5;
    }

    @media (max-width: 480px) {
        .contact-card {
            padding: 1rem;
        }
    }
</style>
