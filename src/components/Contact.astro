<script>
    let footerObserver: IntersectionObserver | null = null;
    let langChangeHandler: (() => void) | null = null;

    function teardownContactCta() {
        if (footerObserver) {
            footerObserver.disconnect();
            footerObserver = null;
        }

        const floatingWhatsapp = document.getElementById("floating-whatsapp");
        floatingWhatsapp?.classList.remove("is-contact-highlight");

        if (langChangeHandler) {
            window.removeEventListener("langChanged", langChangeHandler);
            langChangeHandler = null;
        }
    }

    function initContact() {
        teardownContactCta();

        // Dynamic year
        const yearEl = document.getElementById("footer-year");
        if (yearEl) yearEl.textContent = new Date().getFullYear().toString();

        // Language-aware links
        const linkedinCard = document.getElementById(
            "linkedin-contact-card",
        ) as HTMLAnchorElement;
        const cvCard = document.getElementById(
            "contact-download-cv",
        ) as HTMLAnchorElement;

        function updateContactLinks() {
            const lang = localStorage.getItem("preferred-lang") || "en";
            if (linkedinCard) {
                linkedinCard.href =
                    lang === "es"
                        ? linkedinCard.dataset.linkedinEs || ""
                        : linkedinCard.dataset.linkedinEn || "";
            }
            if (cvCard) {
                cvCard.href =
                    lang === "es"
                        ? cvCard.dataset.cvEs || ""
                        : cvCard.dataset.cvEn || "";
            }
        }

        updateContactLinks();
        langChangeHandler = updateContactLinks;
        window.addEventListener("langChanged", langChangeHandler);

        const contactFooter = document.querySelector(".contact .footer");
        const floatingWhatsapp = document.getElementById("floating-whatsapp");

        if (contactFooter && floatingWhatsapp) {
            footerObserver = new IntersectionObserver(
                ([entry]) => {
                    floatingWhatsapp.classList.toggle(
                        "is-contact-highlight",
                        entry.isIntersecting,
                    );
                },
                {
                    threshold: 0.65,
                },
            );

            footerObserver.observe(contactFooter);
        }
    }

    initContact();
    document.addEventListener("astro:after-swap", initContact);
    document.addEventListener("astro:before-swap", teardownContactCta);
</script>

<style>
    .contact {
        padding: var(--section-padding) 0;
        min-height: auto;
        display: block;
    }

    .contact-bg {
        background:
            radial-gradient(
                ellipse 60% 50% at 50% 60%,
                rgba(56, 189, 248, 0.08) 0%,
                transparent 60%
            ),
            radial-gradient(
                ellipse 40% 30% at 30% 40%,
                rgba(34, 211, 238, 0.06) 0%,
                transparent 50%
            );
    }

    .contact-container {
        position: relative;
        z-index: 2;
    }

    .contact-content {
        text-align: center;
        max-width: 700px;
        margin: 0 auto;
    }

    .contact-text {
        font-size: 1rem;
        color: var(--text-secondary);
        line-height: 1.62;
        margin-bottom: 1.7rem;
    }

    .contact-text strong {
        color: var(--accent-emerald);
    }

    .contact-cards {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 0.8rem;
        max-width: 600px;
        margin: 0 auto;
    }

    .contact-card {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: 0.95rem 1.1rem;
        text-decoration: none;
        color: var(--text-primary);
        cursor: pointer;
    }

    .contact-card:hover {
        color: var(--text-primary);
    }

    .contact-card:hover .contact-arrow {
        transform: translateX(5px);
        opacity: 1;
    }

    .contact-card-accent {
        grid-column: 1 / -1;
        background: rgba(56, 189, 248, 0.04) !important;
        border-color: rgba(56, 189, 248, 0.15) !important;
    }

    .contact-card-accent:hover {
        border-color: rgba(56, 189, 248, 0.4) !important;
    }

    .contact-icon {
        width: 42px;
        height: 42px;
        border-radius: var(--radius-md);
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
    }

    .email-icon {
        background: rgba(56, 189, 248, 0.15);
        color: var(--accent-blue);
    }
    .linkedin-icon {
        background: rgba(56, 189, 248, 0.14);
        color: var(--accent-blue);
    }
    .github-icon {
        background: rgba(255, 255, 255, 0.08);
        color: var(--text-primary);
    }
    .freelancer-icon {
        background: rgba(34, 211, 238, 0.16);
        color: var(--accent-cyan);
    }
    .cv-icon {
        background: rgba(56, 189, 248, 0.15);
        color: var(--accent-blue);
    }

    .contact-card div:not(.contact-icon) {
        text-align: left;
        flex: 1;
    }

    .contact-card strong {
        display: block;
        font-size: 0.9rem;
        margin-bottom: 0.1rem;
    }

    .contact-card p {
        font-size: 0.82rem;
        color: var(--text-muted);
        font-family: var(--font-mono);
    }

    .contact-arrow {
        font-size: 1.2rem;
        color: var(--text-muted);
        transition: all 0.3s;
        opacity: 0.5;
    }

    .mini-badge {
        display: inline-flex;
        align-items: center;
        padding: 0.2rem 0.45rem;
        border-radius: 999px;
        border: 1px solid rgba(34, 197, 94, 0.35);
        background: rgba(34, 197, 94, 0.15);
        color: #bbf7d0;
        font-size: 0.62rem;
        font-weight: 700;
        letter-spacing: 0.04em;
        text-transform: uppercase;
        white-space: nowrap;
        margin-left: auto;
        margin-right: 0.3rem;
    }

    .footer {
        margin-top: 2.8rem;
        text-align: center;
    }

    .footer-line {
        width: 100%;
        height: 1px;
        background: linear-gradient(
            90deg,
            transparent,
            rgba(56, 189, 248, 0.22),
            transparent
        );
        margin-bottom: 1.25rem;
    }

    .footer-text {
        font-size: 0.85rem;
        color: var(--text-muted);
    }

    .footer-code {
        font-family: var(--font-mono);
        color: var(--accent-blue);
        opacity: 0.5;
    }

    @media (max-width: 600px) {
        .contact-cards {
            grid-template-columns: 1fr;
        }
        .contact-card {
            padding: 1rem;
        }

        .mini-badge {
            font-size: 0.58rem;
            padding: 0.18rem 0.4rem;
        }

        .contact-card-accent {
            grid-column: auto;
        }
    }
</style>
