<section class="skills" id="skills">
    <div class="container">
        <div class="skills-header reveal">
            <p class="section-label" data-i18n="skills.label">
                Technical Arsenal
            </p>
            <h2 class="section-title" data-i18n="skills.title">
                The Full <span class="gradient-text">Stack & Beyond</span>
            </h2>
            <p class="section-subtitle" data-i18n="skills.subtitle">
                A deep, multi-disciplinary toolkit ranging from low-level
                automation to high-level system architecture.
            </p>
        </div>

        <div class="bento-grid stagger-children">
            {
                skillCategories.map((category) => (
                    <div class={`bento-item glass-card ${category.span || ""}`}>
                        <div class="category-header">
                            <span class="category-icon">{category.icon}</span>
                            <h3 class="category-title">{category.title}</h3>
                        </div>

                        <div class="skill-list">
                            {category.skills.map((skill) => (
                                <div class="skill-item">
                                    <div class="skill-info">
                                        <span class="skill-name">
                                            {skill.name}
                                        </span>
                                        <span class="skill-years">
                                            {skill.years} yrs
                                        </span>
                                    </div>
                                    <div class="skill-bar">
                                        <div
                                            class="skill-progress"
                                            data-progress={skill.level}
                                            style={`--progress: ${skill.level}%`}
                                        >
                                            <div class="skill-glow" />
                                        </div>
                                    </div>
                                </div>
                            ))}
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</section>

<script>
    const skillObserver = new IntersectionObserver(
        (entries) => {
            entries.forEach((entry) => {
                if (entry.isIntersecting) {
                    const bars =
                        entry.target.querySelectorAll(".skill-progress");
                    bars.forEach((bar, i) => {
                        const htmlBar = bar as HTMLElement;
                        setTimeout(() => {
                            htmlBar.style.width =
                                htmlBar.style.getPropertyValue("--progress");
                        }, i * 80);
                    });
                    skillObserver.unobserve(entry.target);
                }
            });
        },
        { threshold: 0.1 },
    );

    document.querySelectorAll(".skill-category").forEach((cat) => {
        skillObserver.observe(cat);
    });
</script>

<style>
    .skills {
        padding: var(--section-padding) 0;
        position: relative;
    }

    .skills-header {
        text-align: center;
        margin-bottom: 4rem;
    }

    .bento-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        grid-auto-rows: minmax(280px, auto);
        gap: 1.5rem;
    }

    .bento-item {
        padding: 2rem;
        display: flex;
        flex-direction: column;
        transition: all 0.5s cubic-bezier(0.16, 1, 0.3, 1);
    }

    .bento-item.row-2 {
        grid-row: span 2;
    }

    .bento-item.col-2 {
        grid-column: span 2;
    }

    .bento-item:hover {
        transform: translateY(-8px) scale(1.02);
        box-shadow:
            0 20px 40px rgba(0, 0, 0, 0.4),
            0 0 20px rgba(56, 189, 248, 0.1);
    }

    .category-header {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-bottom: 2rem;
        padding-bottom: 1.25rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    }

    .category-icon {
        font-size: 1.8rem;
        filter: drop-shadow(0 0 8px rgba(56, 189, 248, 0.3));
    }

    .category-title {
        font-size: 1.2rem;
        font-weight: 800;
        letter-spacing: -0.01em;
    }

    .skill-list {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
        flex: 1;
        justify-content: center;
    }

    .skill-item {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .skill-info {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .skill-name {
        font-size: 0.9rem;
        font-weight: 600;
        color: var(--text-primary);
    }

    .skill-years {
        font-family: var(--font-mono);
        font-size: 0.7rem;
        color: var(--text-muted);
        letter-spacing: 0.05em;
    }

    .skill-bar {
        height: 4px;
        background: rgba(255, 255, 255, 0.03);
        border-radius: 10px;
        position: relative;
    }

    .skill-progress {
        height: 100%;
        width: 0;
        background: var(--gradient-primary);
        border-radius: 10px;
        transition: width 1.5s cubic-bezier(0.16, 1, 0.3, 1);
        position: relative;
    }

    .skill-glow {
        position: absolute;
        right: -4px;
        top: 50%;
        transform: translateY(-50%);
        width: 10px;
        height: 10px;
        background: var(--accent-blue);
        border-radius: 50%;
        box-shadow: 0 0 15px var(--accent-blue);
        opacity: 0.8;
    }

    @media (max-width: 1024px) {
        .bento-grid {
            grid-template-columns: repeat(2, 1fr);
        }
        .bento-item.col-2 {
            grid-column: span 1;
        }
    }

    @media (max-width: 768px) {
        .bento-grid {
            grid-template-columns: 1fr;
            grid-auto-rows: auto;
        }
        .bento-item.row-2 {
            grid-row: span 1;
        }
    }
</style>

<script>
    const skillObserver = new IntersectionObserver(
        (entries) => {
            entries.forEach((entry) => {
                if (entry.isIntersecting) {
                    const bars =
                        entry.target.querySelectorAll(".skill-progress");
                    bars.forEach((bar, i) => {
                        const htmlBar = bar as HTMLElement;
                        setTimeout(() => {
                            htmlBar.style.width =
                                htmlBar.getAttribute("data-progress") + "%";
                        }, i * 100);
                    });
                    skillObserver.unobserve(entry.target);
                }
            });
        },
        { threshold: 0.2 },
    );

    document.querySelectorAll(".bento-item").forEach((item) => {
        skillObserver.observe(item);
    });
</script>
