---
import { translations } from "../i18n";

const { lang = "en" } = Astro.props;
const t = translations[lang as "en" | "es"].skills;
const skillCategories = t.categories;

const skillCategoryIcons = [
    "code",
    "bot",
    "layers",
    "database",
    "cloud",
    "gem",
    "shield",
];

function getSkillIcon(icon: string) {
    const icons: Record<string, string> = {
        code: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round"><path d="m16 18 6-6-6-6"/><path d="m8 6-6 6 6 6"/></svg>`,
        bot: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="8" width="18" height="11" rx="2"/><path d="M7 8V6a5 5 0 0 1 10 0v2"/><path d="M8 13h.01"/><path d="M16 13h.01"/><path d="M12 13h.01"/></svg>`,
        layers: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round"><path d="m12 2 9 5-9 5-9-5 9-5Z"/><path d="m3 12 9 5 9-5"/><path d="m3 17 9 5 9-5"/></svg>`,
        database: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round"><ellipse cx="12" cy="5" rx="9" ry="3"/><path d="M3 5v14c0 1.7 4 3 9 3s9-1.3 9-3V5"/><path d="M3 12c0 1.7 4 3 9 3s9-1.3 9-3"/></svg>`,
        cloud: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round"><path d="M17.5 20a4.5 4.5 0 1 0-1-8.88A6 6 0 1 0 6.2 18H17.5Z"/></svg>`,
        gem: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round"><path d="M6 3h12l4 6-10 12L2 9l4-6Z"/><path d="M2 9h20"/></svg>`,
        shield: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round"><path d="M12 2 4 5v6c0 5 3.4 9.8 8 11 4.6-1.2 8-6 8-11V5l-8-3Z"/><path d="m9 12 2 2 4-4"/></svg>`,
    };

    return icons[icon] || icons.code;
}
---

<section class="skills" id="skills">
    <div class="container">
        <div class="skills-header reveal">
            <p class="section-label" data-i18n="skills.label">
                Technical Arsenal
            </p>
            <h2 class="section-title" data-i18n="skills.title">
                The Full <span class="gradient-text">Stack & Beyond</span>
            </h2>
            <p class="section-subtitle" data-i18n="skills.subtitle">
                A deep, multi-disciplinary toolkit ranging from low-level
                automation to high-level system architecture.
            </p>
        </div>

        <div class="bento-grid stagger-children">
            {
                skillCategories.map((category, i) => (
                    <div
                        class={`bento-item glass-card interactive ${category.span || ""}`}
                        style={`transition-delay: ${i * 0.1}s`}
                    >
                        <div class="category-header">
                            <span
                                class="category-icon"
                                aria-hidden="true"
                                set:html={getSkillIcon(skillCategoryIcons[i] || "code")}
                            ></span>
                            <h3
                                class="category-title"
                                data-i18n={`skills.categories.${i}.title`}
                            >
                                {category.title}
                            </h3>
                        </div>

                        <div class="skill-list">
                            {category.skills.map((skill, skillIndex) => (
                                <div class="skill-item">
                                    <div class="skill-info">
                                        <span
                                            class="skill-name"
                                            data-i18n={`skills.categories.${i}.skills.${skillIndex}.name`}
                                        >
                                            {skill.name}
                                        </span>
                                        <span class="skill-years">
                                            {skill.years}
                                            {" "}
                                            <span data-i18n="skills.years_suffix">
                                                {t.years_suffix}
                                            </span>
                                        </span>
                                    </div>
                                    <div class="skill-bar">
                                        <div
                                            class="skill-progress"
                                            data-progress={skill.level}
                                            style={`--progress: ${skill.level}%`}
                                        >
                                            <div class="skill-glow" />
                                        </div>
                                    </div>
                                </div>
                            ))}
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</section>

<style>
    .skills {
        padding: var(--section-padding) 0;
        position: relative;
    }

    .skills-header {
        text-align: center;
        margin-bottom: 2.8rem;
    }

    .bento-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        grid-auto-rows: minmax(280px, auto);
        gap: 1.5rem;
    }

    .bento-item {
        padding: 1.35rem;
        display: flex;
        flex-direction: column;
        transition: all 0.5s cubic-bezier(0.16, 1, 0.3, 1);
    }

    .bento-item.row-2 {
        grid-row: span 2;
    }

    .bento-item.col-2 {
        grid-column: span 2;
    }

    .bento-item:hover {
        transform: translateY(-8px) scale(1.02);
        box-shadow:
            0 20px 40px rgba(0, 0, 0, 0.4),
            0 0 20px rgba(56, 189, 248, 0.1);
    }

    .category-header {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        margin-bottom: 1.25rem;
        padding-bottom: 0.9rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    }

    .category-icon {
        width: 36px;
        height: 36px;
        border-radius: 10px;
        border: 1px solid rgba(56, 189, 248, 0.2);
        background: rgba(56, 189, 248, 0.1);
        color: var(--accent-blue);
        display: inline-flex;
        align-items: center;
        justify-content: center;
    }

    .category-icon svg {
        width: 19px;
        height: 19px;
    }

    .category-title {
        font-size: 1.2rem;
        font-weight: 800;
        letter-spacing: -0.01em;
    }

    .skill-list {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        flex: 1;
        justify-content: center;
    }

    .skill-item {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .skill-info {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .skill-name {
        font-size: 0.9rem;
        font-weight: 600;
        color: var(--text-primary);
    }

    .skill-years {
        font-family: var(--font-mono);
        font-size: 0.7rem;
        color: var(--text-muted);
        letter-spacing: 0.05em;
    }

    .skill-bar {
        height: 4px;
        background: rgba(255, 255, 255, 0.03);
        border-radius: 10px;
        position: relative;
    }

    .skill-progress {
        height: 100%;
        width: 0;
        background: var(--gradient-primary);
        border-radius: 10px;
        transition: width 1.5s cubic-bezier(0.16, 1, 0.3, 1);
        position: relative;
    }

    .skill-glow {
        position: absolute;
        right: -4px;
        top: 50%;
        transform: translateY(-50%);
        width: 10px;
        height: 10px;
        background: var(--accent-blue);
        border-radius: 50%;
        box-shadow: 0 0 15px var(--accent-blue);
        opacity: 0.8;
    }

    @media (max-width: 1024px) {
        .bento-grid {
            grid-template-columns: repeat(2, 1fr);
        }
        .bento-item.col-2 {
            grid-column: span 1;
        }
    }

    @media (max-width: 768px) {
        .bento-item {
            padding: 1.15rem;
        }

        .bento-grid {
            grid-template-columns: 1fr;
            grid-auto-rows: auto;
        }
        .bento-item.row-2 {
            grid-row: span 1;
        }
    }
</style>

<script>
    function teardownSkillsAnimation() {
        const runtime = ((window as any).__cvRuntime ||= {});
        if (runtime.skillsObserver) {
            runtime.skillsObserver.disconnect();
            runtime.skillsObserver = null;
        }
    }

    function initSkillsAnimation() {
        teardownSkillsAnimation();

        const runtime = ((window as any).__cvRuntime ||= {});
        const observer = new IntersectionObserver(
            (entries) => {
                entries.forEach((entry) => {
                    if (!entry.isIntersecting) return;

                    const bars = entry.target.querySelectorAll(".skill-progress");
                    bars.forEach((bar, i) => {
                        const htmlBar = bar as HTMLElement;
                        setTimeout(() => {
                            htmlBar.style.width = `${htmlBar.getAttribute("data-progress") || 0}%`;
                        }, i * 100);
                    });

                    observer.unobserve(entry.target);
                });
            },
            { threshold: 0.2 },
        );

        runtime.skillsObserver = observer;

        document.querySelectorAll(".bento-item").forEach((item) => {
            observer.observe(item);
        });
    }

    initSkillsAnimation();
    document.addEventListener("astro:after-swap", initSkillsAnimation);
    document.addEventListener("astro:before-swap", teardownSkillsAnimation);
</script>
